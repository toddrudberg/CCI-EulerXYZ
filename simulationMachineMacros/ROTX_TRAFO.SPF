PROC ROTX_TRAFO(INT CMD) DISPLOF

DEF INT TRAFO_INIT

TRAFO_INIT = $AC_TRAFO
STOPRE

IF CMD >= 1
    TRAFOOF
    STOPRE
    $MC_TRAFO_AXES_IN_1[9] = 8 ;ADD ROTX TO TRAORI DEFINITION
    NEWCONF
    STOPRE
ELSE
    TRAFOOF
    STOPRE
    $MC_TRAFO_AXES_IN_1[9] = 0 ;REMOVE ROTX FROM TRAORI DEFINITION
    NEWCONF
    STOPRE
ENDIF

IF TRAFO_INIT <> 0
    TRAORI
ENDIF

RET
